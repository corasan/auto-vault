{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 100,
		"attributePosition": "auto"
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"quoteStyle": "single",
			"attributePosition": "auto",
			"lineWidth": 90,
			"trailingCommas": "all"
		}
	},
	"files": {
		"include": [
			"mobile/**/*.js",
			"mobile/**/*.jsx",
			"mobile/**/*.ts",
			"mobile/**/*.tsx",
			"functions/**/*.js",
			"functions/**/*.jsx",
			"functions/**/*.ts",
			"functions/**/*.tsx"
		],
		"ignore": ["**/node_modules", "**/dist", "**/build"]
	}
}
