{
	"name": "auto-vault",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"mobile",
		"server"
	],
	"scripts": {
	  "server": "bun --filter=server dev",
		"mobile": "bun --filter=mobile dev",
		"build:functions": "bun --cwd functions build",
		"deploy:functions": "bun --cwd functions deploy",
		"lint": "biome check .",
		"format": "biome format --write .",
		"reset-project": "node ./scripts/reset-project.js"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"typescript": "~5.8.3"
	}
}
